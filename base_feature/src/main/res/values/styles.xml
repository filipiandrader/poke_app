<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Title.Collapsed" parent="android:TextAppearance">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.Title.Expanded" parent="android:TextAppearance">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="PokeApp.Fullscreen.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="PokeApp.Home.TextAppearance.Title" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/circularstd_medium</item>
        <item name="android:textColor">@color/colorIcons</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="PokeApp.TextAppearance.Label" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/circularstd_book</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="PokeApp.Details.TextAppearance.Label" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/circularstd_medium</item>
        <item name="android:textColor">@color/colorIcons</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PokeApp.Details.TextAppearance.Label.ID" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:fontFamily">@font/circularstd_medium</item>
        <item name="android:textColor">@color/colorIcons</item>
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="PokeApp.Details.TextAppearance.Label.Type" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:background">@drawable/background_item_pokemon_span</item>
        <item name="android:fontFamily">@font/circularstd_medium</item>
        <item name="android:textColor">@color/colorIcons</item>
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">0.7</item>
    </style>

    <style name="PokeApp.Item.TextAppearance.Title" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/circularstd_medium</item>
        <item name="android:textColor">@color/colorIcons</item>
    </style>

    <style name="PokeApp.Item.TextAppearance.ID" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">0.4</item>
        <item name="android:fontFamily">@font/circularstd_medium</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="PokeApp.Item.TextAppearance.Subtitle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/background_item_pokemon_span</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:fontFamily">@font/circularstd_medium</item>
        <item name="android:textColor">@color/colorIcons</item>
    </style>

    <style name="PokeApp.About.TextAppearance.Label" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/circularstd_book</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PokeApp.About.TextAppearance.Info" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">64dp</item>
        <item name="android:fontFamily">@font/circularstd_book</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>