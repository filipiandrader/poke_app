<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/segoe_ui</item>
    </style>

    <style name="PokeApp.SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
<!--        <item name="android:windowBackground">@drawable/splash</item>-->
    </style>
    <style name="PokeApp.TextAppearance.Label" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/segoe_ui</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="PokeApp.Details.TextAppearance.Label" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:fontFamily">@font/segoe_ui</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="PokeApp.Details.TextAppearance.Info" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:fontFamily">@font/segoe_ui</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="PokeApp.TextAppearance.Message" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/segoe_ui</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="PokeApp.Item.TextAppearance.Title" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:fontFamily">@font/segoe_ui</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="PokeApp.Item.TextAppearance.Subtitle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:fontFamily">@font/segoe_ui</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

</resources>
