            <TextView
                android:id="@+id/baseStatsTotalLabelTextView"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/base_stats_total_label"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/baseStatsSpeedLabelTextView" />

            <TextView
                android:id="@+id/baseStatsTotalTextView"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/baseStatsTotalLabelTextView"
                app:layout_constraintStart_toEndOf="@+id/baseStatsTotalLabelTextView"
                app:layout_constraintTop_toTopOf="@+id/baseStatsTotalLabelTextView"
                tools:text="55" />

            <ProgressBar
                android:id="@+id/baseStatsTotalProgressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginStart="8dp"
                android:indeterminate="false"
                android:max="600"
                android:progress="43"
                app:layout_constraintBottom_toBottomOf="@+id/baseStatsTotalLabelTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/baseStatsTotalTextView"
                app:layout_constraintTop_toTopOf="@+id/baseStatsTotalLabelTextView" />
