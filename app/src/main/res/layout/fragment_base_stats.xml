                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginStart="8dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="43"
                app:layout_constraintBottom_toBottomOf="@+id/baseStatsSpAtkLabelTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/baseStatsSpAtkTextView"
                app:layout_constraintTop_toTopOf="@+id/baseStatsSpAtkLabelTextView" />

            <TextView
                android:id="@+id/baseStatsSpDefLabelTextView"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/base_stats_special_defense_label"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
