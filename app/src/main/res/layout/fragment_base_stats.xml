<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLight"
    tools:context=".ui.fragments.details.base_stats.BaseStatsFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/baseStatsHPLabelTextView"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/base_stats_hp_label"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/baseStatsHPTextView"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/baseStatsHPLabelTextView"
                app:layout_constraintStart_toEndOf="@+id/baseStatsHPLabelTextView"
                app:layout_constraintTop_toTopOf="@+id/baseStatsHPLabelTextView"
                tools:text="55" />

            <ProgressBar
                android:id="@+id/baseStatsHPProgressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginStart="8dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="43"
                app:layout_constraintBottom_toBottomOf="@+id/baseStatsHPLabelTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/baseStatsHPTextView"
                app:layout_constraintTop_toTopOf="@+id/baseStatsHPLabelTextView" />

            <TextView
                android:id="@+id/baseStatsAtkLabelTextView"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/base_stats_attack_label"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/baseStatsHPLabelTextView" />

            <TextView
                android:id="@+id/baseStatsAtkTextView"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/baseStatsAtkLabelTextView"
                app:layout_constraintStart_toEndOf="@+id/baseStatsAtkLabelTextView"
                app:layout_constraintTop_toTopOf="@+id/baseStatsAtkLabelTextView"
                tools:text="55" />

            <ProgressBar
                android:id="@+id/baseStatsAtkProgressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginStart="8dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="43"
                app:layout_constraintBottom_toBottomOf="@+id/baseStatsAtkLabelTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/baseStatsAtkTextView"
                app:layout_constraintTop_toTopOf="@+id/baseStatsAtkLabelTextView" />

            <TextView
                android:id="@+id/baseStatsDefLabelTextView"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/base_stats_defense_label"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/baseStatsAtkLabelTextView" />

            <TextView
                android:id="@+id/baseStatsDefTextView"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
