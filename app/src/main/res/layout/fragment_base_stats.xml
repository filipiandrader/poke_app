                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginStart="8dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="43"
                app:layout_constraintBottom_toBottomOf="@+id/baseStatsDefLabelTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/baseStatsDefTextView"
                app:layout_constraintTop_toTopOf="@+id/baseStatsDefLabelTextView" />

            <TextView
                android:id="@+id/baseStatsSpAtkLabelTextView"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
