<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemPokemonConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="8dp"
    android:background="@drawable/background_item_pokemon"
    android:clickable="true"
    android:clipToPadding="false"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/itemPokemonNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/circularstd_medium"
        android:textColor="@color/colorIcons"
        android:textSize="20sp"
        android:textStyle="bold"
        app:fontFamily="@font/circularstd_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Titulo" />

    <TextView
        android:id="@+id/itemPokemonIDTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.25"
        android:gravity="top"
        android:text="#001"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="#001" />


    <TextView
        android:id="@+id/itemPokemonType3TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:background="@drawable/background_item_pokemon_span"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="Grass"
        android:textColor="@color/colorIcons"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/itemPokemonType2TextView"
        app:layout_constraintStart_toStartOf="@+id/itemPokemonNameTextView" />

    <TextView
        android:id="@+id/itemPokemonType2TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:background="@drawable/background_item_pokemon_span"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="Grass"
        android:textColor="@color/colorIcons"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/itemPokemonType1TextView"
        app:layout_constraintStart_toStartOf="@+id/itemPokemonType1TextView" />

    <TextView
        android:id="@+id/itemPokemonType1TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_item_pokemon_span"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="Grass"
        android:textColor="@color/colorIcons"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/itemPokemonType2TextView" />

    <LinearLayout
        android:id="@+id/itemPokemonLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginEnd="-16dp"
            android:layout_marginBottom="-24dp"
            android:adjustViewBounds="true"
            android:alpha="0.25"
            android:contentDescription="@string/app_name"
            android:src="@drawable/pokeball"
            android:tint="@color/colorIcons" />
    </LinearLayout>

    <ImageView
        android:id="@+id/itemPokemonPhotoImageView"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/poke001"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>